extends layout/layout

block content
    form(action="/login", method="post")
        div.mb-3
            label.form-label(for="name") User Name
            input.form-control(name="name", id="name", type="text")
            div.form-text#emailHelp We'll never share your name with anyone else.
        div.mb-3
            label.form-label(for="password") Password
            input.form-control(name="password", id="password", type='password')
        div.mb-3
            input.btn.btn-primary(type='submit', value='Login')
    h3= text